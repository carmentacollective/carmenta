{
  "name": "carmenta",
  "version": "0.1.0",
  "description": "A heart-centered AI interface for builders who work at the speed of thought",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/carmentacollective/carmenta"
  },
  "homepage": "https://carmenta.ai",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css}\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pre-push": "run-p type-check format:check test",
    "prepare": "husky",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "evals": "bun scripts/evals/run-integration-tests.ts",
    "evals:fast": "bun scripts/evals/run-integration-tests.ts --fast",
    "evals:verbose": "bun scripts/evals/run-integration-tests.ts --verbose",
    "evals:routing": "bun scripts/evals/run-integration-tests.ts --category=routing",
    "evals:tools": "bun scripts/evals/run-integration-tests.ts --category=tools",
    "evals:reasoning": "bun scripts/evals/run-integration-tests.ts --category=reasoning",
    "evals:overrides": "bun scripts/evals/run-integration-tests.ts --category=overrides",
    "evals:quality": "bun scripts/evals/run-quality-evals.ts",
    "evals:quality:verbose": "bun scripts/evals/run-quality-evals.ts --verbose"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.53",
    "@ai-sdk/react": "^2.0.106",
    "@arizeai/openinference-vercel": "^2.5.0",
    "@arizeai/phoenix-client": "^5.5.1",
    "@arizeai/phoenix-evals": "^0.6.2",
    "@arizeai/phoenix-otel": "^0.3.1",
    "@clerk/nextjs": "^6.35.6",
    "@grpc/grpc-js": "^1.14.2",
    "@openrouter/ai-sdk-provider": "^1.3.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.28.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "ai": "^5.0.106",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^12.23.25",
    "heart-centered-prompts": "^0.5.1",
    "import-in-the-middle": "^2.0.0",
    "lucide-react": "^0.554.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.7",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "require-in-the-middle": "^8.0.1",
    "sqids": "^0.3.0",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "npm-run-all2": "^8.0.4",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "schema-dts": "^1.1.5",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
