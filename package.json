{
  "name": "carmenta",
  "version": "0.1.0",
  "description": "A heart-centered AI interface for builders who work at the speed of thought",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/carmentacollective/carmenta"
  },
  "homepage": "https://carmenta.ai",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css}\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pre-push": "run-p type-check format:check test",
    "prepare": "husky",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.104",
    "@assistant-ui/react": "^0.11.47",
    "@assistant-ui/react-ai-sdk": "^1.1.16",
    "@assistant-ui/react-markdown": "^0.11.6",
    "@assistant-ui/react-ui": "^0.2.1",
    "@clerk/nextjs": "^6.35.5",
    "@openrouter/ai-sdk-provider": "^1.2.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.27.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "ai": "^5.0.104",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "heart-centered-prompts": "^0.4.0",
    "lucide-react": "^0.554.0",
    "next": "^16.0.5",
    "pino": "^10.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.5",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.3",
    "npm-run-all2": "^8.0.4",
    "pino-pretty": "^13.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
