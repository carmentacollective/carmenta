{
  "name": "carmenta",
  "version": "0.1.0",
  "description": "A heart-centered AI interface for builders who work at the speed of thought",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/carmentacollective/carmenta"
  },
  "homepage": "https://carmenta.ai",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css}\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pre-push": "run-p type-check format:check test",
    "prepare": "husky",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.106",
    "@clerk/nextjs": "^6.35.6",
    "@openrouter/ai-sdk-provider": "^1.3.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.28.0",
    "@supabase/supabase-js": "^2.86.2",
    "@t3-oss/env-nextjs": "^0.13.8",
    "ai": "^5.0.106",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^12.23.25",
    "heart-centered-prompts": "^0.5.1",
    "import-in-the-middle": "^2.0.0",
    "lucide-react": "^0.554.0",
    "marked": "^17.0.1",
    "nanoid": "^5.1.6",
    "next": "^16.0.7",
    "next-themes": "^0.4.6",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "require-in-the-middle": "^8.0.1",
    "sqids": "^0.3.0",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/browser-image-compression": "^1.0.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/remove-markdown": "^0.3.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "npm-run-all2": "^8.0.4",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "schema-dts": "^1.1.5",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
